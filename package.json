{
  "name": "eb-web",
  "private": true,
  "workspaces": [
    "apps/*",
    "submodules/eb-pancakeswap-frontend/packages/*"
  ],
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "init-submodules": "git submodule update --init --recursive",
    "dev": "turbo run dev --filter=eb-frontend...",
    "build": "turbo run build --filter=eb-frontend...",
    "build-docker": "turbo run build --cache-dir=.turbo-docker-cache --filter=eb-frontend...",
    "build:basic": "turbo run build-local --filter=eb-frontend...",
    "submodules:update": "git submodule update --remote && git add submodules/eb-pancake-frontend && git commit -m \"Update eb-pancake-frontend submodule to latest commit\" && pnpm install && pnpm dev"
  },
  "devDependencies": {
    "turbo": "^2.0.9",
    "@pancakeswap/tsconfig": "workspace:*"
  }
}
